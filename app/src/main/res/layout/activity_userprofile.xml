<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2979FF"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/baseline_person_outline_24"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/circular"
        android:id="@+id/userprofile"
        android:padding="5dp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_below="@+id/userprofile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textAlignment="center"
        android:paddingBottom="2dp"
        android:maxLines="1"
        android:fontFamily="@font/amaranth"
        android:id="@+id/usernamepro"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@+id/usernamepro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAlignment="center"
        android:paddingBottom="2dp"
        android:maxLines="1"
        android:fontFamily="@font/amaranth"
        android:id="@+id/useremail"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bottomnavigationbar"
        android:id="@+id/bottomnavigationbar"
        android:elevation="2dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:menu="@menu/bottom_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="290dp"
        android:background="@drawable/dashboard"
        android:id="@+id/user"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/card_backgound"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            android:id="@+id/aboutapp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="35dp"
                android:src="@drawable/appicon"
                android:padding="4dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/blue"
                android:text="About App "
                android:textAlignment="center"
                android:textSize="25sp"
                android:fontFamily="@font/amaranth"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/card_backgound"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            android:id="@+id/chnageprofile">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="35dp"
                android:src="@drawable/baseline_perm_contact_calendar_24"
                android:padding="4dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/blue"
                android:text="Change Profile "
                android:textAlignment="center"
                android:textSize="25sp"
                android:fontFamily="@font/amaranth"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/card_backgound"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            android:id="@+id/chnagepassword">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="35dp"
                android:src="@drawable/baseline_lock_reset_24"
                android:padding="4dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/blue"
                android:text="Change Password"
                android:textAlignment="center"
                android:textSize="25sp"
                android:fontFamily="@font/amaranth"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/card_backgound"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            android:id="@+id/logout">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="35dp"
                android:src="@drawable/baseline_logout_24"
                android:padding="4dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/blue"
                android:text="Logout"
                android:textAlignment="center"
                android:textSize="25sp"
                android:fontFamily="@font/amaranth"/>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</RelativeLayout>