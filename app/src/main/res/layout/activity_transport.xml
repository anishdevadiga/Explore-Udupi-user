<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transport"
    android:background="@color/blue">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:id="@+id/transback"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/amaranth"
        android:text="Transport "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingTop="35dp"
        android:paddingStart="50dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:background="@drawable/dashboard"
        android:id="@+id/dash"
        >
        <GridLayout
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:rowCount="2"
            android:columnCount="2"
            android:animateLayoutChanges="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/grid"


            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="40dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/card_backgound"
                android:backgroundTint="@color/white"
                android:id="@+id/bus"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/busnew"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bus"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingTop="20dp"
                        android:fontFamily="@font/amaranth"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="40dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/card_backgound"
                android:backgroundTint="@color/white"
                android:id="@+id/traint"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/trainnew"
                        android:padding="10dp"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Railway Station"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingTop="20dp"
                        android:fontFamily="@font/amaranth"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_backgound"
                android:backgroundTint="@color/white"
                android:id="@+id/cab"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="20dp"
                        android:src="@drawable/taxinew"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cab"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingTop="20dp"
                        android:fontFamily="@font/amaranth"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="40dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_backgound"
                android:backgroundTint="@color/white"
                android:id="@+id/rent"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/carnew"
                        android:adjustViewBounds="true"
                        android:padding="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Rent"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="@font/amaranth"
                        android:paddingTop="20dp"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </GridLayout>




    </RelativeLayout>


</RelativeLayout>